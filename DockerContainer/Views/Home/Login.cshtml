@{
    ViewData["Title"] = "About";
}
@model DockerContainer.Models.LoginModel
<h2>Login</h2>
@using (Html.BeginForm("Login", "Home"))
{
    @if (ViewBag.Message != null)
    {
        <div class="col-md-12 text-center alert @ViewBag.Class">
            @ViewBag.Message
        </div>
    }
    <div class="col-md-12">
        <div class="col-md-4">
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                <div class="text-danger">@Html.ValidationMessageFor(x => x.Email)</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Password</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                <div class="text-danger">@Html.ValidationMessageFor(x => x.Password)</div>
            </div>
        </div>
    </div>


    <div class="col-md-12">
        <div class="col-md-4">
            <input type="submit" value="Submit" class="btn btn-danger" />
        </div>
    </div>
}
